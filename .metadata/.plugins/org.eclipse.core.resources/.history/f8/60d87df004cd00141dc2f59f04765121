package org.emftrace.akm.ui.zest.figures;

import org.eclipse.draw2d.Label;
import org.eclipse.draw2d.RectangleFigure;
import org.eclipse.swt.graphics.Color;
import org.eclipse.swt.widgets.Display;

public class DrawbacksFigure extends AbstractASTAFigure {

	// ===========================================================
	// Constants
	// ===========================================================

	// ===========================================================
	// Fields
	// ===========================================================

	// ===========================================================
	// Constructors
	// ===========================================================

	public DrawbacksFigure() {

		super();

		RectangleFigure rec = new RectangleFigure();
		rec.setSize(super.getSize());
		rec.setVisible(true);
		rec.setBackgroundColor(new Color(Display.getCurrent(), 0, 0, 255));
		add(rec);
	}

	// ===========================================================
	// Getter & Setter
	// ===========================================================

	// ===========================================================
	// Methods for/from SuperClass/Interfaces
	// ===========================================================

	@Override
	public Label getTitleLabel() {
		Label titleLabel = new Label("Drawbacks");
		titleLabel.setFont(DEFAULT_FONT_TITLE);
		return titleLabel;
	}

	// ===========================================================
	// Methods
	// ===========================================================

	// ===========================================================
	// Inner and Anonymous Classes
	// ===========================================================
}
